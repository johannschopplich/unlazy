{
  "name": "@unlazy/solid",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.18.3",
  "description": "Solid lazy loading library for placeholder images",
  "author": "Johann Schopplich <hello@johannschopplich.com>",
  "license": "MIT",
  "homepage": "https://unlazy.byjohann.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/unlazy.git",
    "directory": "packages/solid"
  },
  "bugs": {
    "url": "https://github.com/johannschopplich/unlazy/issues"
  },
  "keywords": [
    "blurhash",
    "lazy",
    "loading",
    "lozad",
    "placeholder",
    "responsive",
    "thumbhash",
    "solid"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./solid": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.jsx"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "pnpm -C playground run dev",
    "dev:build": "pnpm -C playground run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:types": "tsc --noEmit"
  },
  "peerDependencies": {
    "solid-js": "^1.7.3"
  },
  "dependencies": {
    "unlazy": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "eslint-plugin-solid": "^0.14.5",
    "solid-js": "^1.9.9",
    "tsup": "^8.5.0",
    "tsup-preset-solid": "^2.2.0",
    "vite-plugin-solid": "^2.11.9"
  }
}
